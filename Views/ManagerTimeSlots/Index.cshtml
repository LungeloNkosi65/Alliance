@model IEnumerable<Accommodation.Models.ManagerTimeSlot>

@{
    ViewBag.Title = "Index";
}

<h2>Manager Time Slots</h2>

<a class="btn btn-default" href="@Url.Action("Create","ManagerTimeSlots")">
    <i class="fa fa-plus"></i>
    Select New Time Slot
</a>
<table class="table table-hover table-striped table-responsive" id="my_list">
    <thead>
        <tr class="table-header-row">

            @*<th>
                @Html.DisplayNameFor(model => model.ManagerEmail)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Timeslot.TimeS)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.ManagerEmail)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Timeslot.TimeS)
            </td>

            <td>
                <a href="@Url.Action("Details","ManagerTimeSlots", new { id=item.ManagerTimeSlotId })" rel="tooltip" title="View" class="btn btn-info btn-simple btn-xs"><i class="fa fa-eye"></i></a>
                <a href="@Url.Action("Edit","ManagerTimeSlots", new { id=item.ManagerTimeSlotId })" rel="tooltip" title="Edit" class="btn btn-success btn-simple btn-xs"><i class="fa fa-edit"></i></a>
                <a href="@Url.Action("Delete", "ManagerTimeSlots", new { id = item.ManagerTimeSlotId })" rel="tooltip" title="Remove" class="btn btn-danger btn-simple btn-xs"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
        }

    </tbody>
</table>
<script type="text/javascript">
    $('#my_list').dataTable(
         {
             dom: 'Bfrtip',
             lengthMenu: [
                 [10, 25, 50, -1],
                 ['10 rows', '25 rows', '50 rows', 'Show all']
             ],
             buttons: [
                 'pageLength', 'csv', 'pdf', 'print'
             ],
             language: { search: "" },
             select: true
         }
     );
     $(".dataTables_filter input").addClass("search-input");
     $(".dataTables_filter input").attr('placeholder', 'Search');
     $('#my_list')
         .removeClass('display')
         .addClass('table table-striped table-hover');</script>

