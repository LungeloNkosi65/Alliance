@model IEnumerable<Accommodation.Models.Room>

@{
    ViewBag.Title = "Index";
}

<h2 align="center">Rooms </h2>
<a class="btn btn-default" href="@Url.Action("Create","Rooms")">
    <i class="fa fa-plus"></i>
    Add New Room
</a>
<table class="table table-hover table-striped table-responsive" id="my_list">
    <thead>
        <tr class="table-header-row">
            <th>
                @Html.DisplayNameFor(model => model.Buildings.BuildingName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomTypes.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoOfPeople)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.roomDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomPicture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Buildings.BuildingName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomTypes.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoOfPeople)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.roomDescription)
                </td>
                <td>
                    <a><img src="data:image/png;base64,@Convert.ToBase64String(item.RoomPicture, 0, item.RoomPicture.Length)" style="width: 40px; height: 40px" alt="" /></a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomPrice)
                </td>
                <td>
                    <a href="@Url.Action("Details","Rooms", new { id=item.RoomId })" rel="tooltip" title="View" class="btn btn-info btn-simple btn-xs"><i class="fa fa-eye"></i></a>
                    <a href="@Url.Action("Edit","Rooms", new { id=item.RoomId })" rel="tooltip" title="Edit" class="btn btn-success btn-simple btn-xs"><i class="fa fa-edit"></i></a>
                    <a href="@Url.Action("Delete", "Rooms", new { id = item.RoomId })" rel="tooltip" title="Remove" class="btn btn-danger btn-simple btn-xs"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }

    </tbody>
</table>
<script type="text/javascript">
    $('#my_list').dataTable(
         {
             dom: 'Bfrtip',
             lengthMenu: [
                 [10, 25, 50, -1],
                 ['10 rows', '25 rows', '50 rows', 'Show all']
             ],
             buttons: [
                 'pageLength', 'csv', 'pdf', 'print'
             ],
             language: { search: "" },
             select: true
         }
     );
     $(".dataTables_filter input").addClass("search-input");
     $(".dataTables_filter input").attr('placeholder', 'Search');
     $('#my_list')
         .removeClass('display')
         .addClass('table table-striped table-hover');</script>

