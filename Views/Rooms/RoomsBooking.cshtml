@model IEnumerable<Accommodation.Models.Room>

@{
    ViewBag.Title = "RoomBooking";
}
<br />
<h2 align="center">Room Booking</h2>
<div class="row">
    @{foreach (var x in Model.Select(n => n.RoomTypes.Type).Distinct())
        {

            <h3>Room Type :@x</h3>
            <br />
            <div>
                <table class="table">
                    <div class="w3-container">
                        @foreach (var item in Model.Where(a => a.RoomTypes.Type.Equals(@x)))
                        {
                           

                            <div class="col-10 mx-auto my-3 col-md-6 col-lg-4">
                                <div class="card car-card">
                                    <a><img src="data:image/png;base64,@Convert.ToBase64String(item.RoomPicture, 0, item.RoomPicture.Length)" style="width: 100% !important; height: 100% !important" alt="" /></a>


                                    @*<img src="~/img/the_car.png" class="card-img-top car-img" alt="" width="200" height="200" />*@
                                    @*<img src="Iimages/Isuzu.jpg" class="card-img-top car-img" alt="">*@
                                    <!--card body-->
                                    <div class="card-body">
                                        <div class="car-info d-flex justify-content-between">
                                            <!--first  flex child-->
                                            <h5 class="car-value align-self-centre py-2 px3">
                                                Room Description - <span class="car-price">@Html.DisplayFor(modelItem => item.roomDescription)</span>
                                            </h5>
                                            <!--second  flex child-->
                                            <h5 class="car-value align-self-centre py-2 px3">
                                                Room Price - <span class="car-price">@Html.DisplayFor(modelItem => item.RoomPrice)</span>
                                            </h5>
                                        </div>
                                    </div>
                                    <!--end of card-->
                                    <div class="card-footer text-capitalize d-flex justify-content-between">
                                        @*<p><span><i class="fas fa-car"></i></span>@Html.DisplayFor(modelItem => item..CategoryName)</p>*@
                                        <p> Room Number @Html.DisplayFor(modelItem => item.RoomNumber)</p>

                                    </div>
                                    <div class="card-footer text-capitalize d-flex justify-content-between">
                                        @*<p><span><i class="fas fa-car"></i></span>@Html.DisplayFor(modelItem => item..CategoryName)</p>*@
                                        <p> Available Rooms @Html.DisplayFor(modelItem => item.NoOfPeople)</p>
                                    </div>
                                    @Html.ActionLink("Book Room", "Create", "BookingRooms", new { id = item.RoomId }, new { @class = "btn btn-info" })
                                    @Html.ActionLink("Make Appointment", "Create", "BookingRooms", new { id = item.RoomId }, new { @class = "btn btn-success" })

                                </div>
                                <hr />
                            </div>
                        }
                    </div>

                </table>
            </div>
        }
    }
</div>
