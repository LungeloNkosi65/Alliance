@model IEnumerable<Accommodation.Models.timeslot>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<a class="btn btn-default" href="@Url.Action("Create","timeslots")">
    <i class="fa fa-plus"></i>
    Add New Time Slot
</a>
<table class="table table-hover table-striped table-responsive" id="my_list">
    <thead>
        <tr class="table-header-row">
            <th>
                @Html.DisplayNameFor(model => model.TimeS)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeS)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TimeSlotID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.TimeSlotID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.TimeSlotID })
                </td>
            </tr>
        }


    </tbody>
</table>
<script type="text/javascript">
    $('#my_list').dataTable(
         {
             dom: 'Bfrtip',
             lengthMenu: [
                 [10, 25, 50, -1],
                 ['10 rows', '25 rows', '50 rows', 'Show all']
             ],
             buttons: [
                 'pageLength', 'csv', 'pdf', 'print'
             ],
             language: { search: "" },
             select: true
         }
     );
     $(".dataTables_filter input").addClass("search-input");
     $(".dataTables_filter input").attr('placeholder', 'Search');
     $('#my_list')
         .removeClass('display')
         .addClass('table table-striped table-hover');</script>


