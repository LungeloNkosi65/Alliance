@model IEnumerable<Accommodation.Models.Building>

@{
    ViewBag.Title = "Index";
}

<h2>Buildings</h2>
<br />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BuildingName)
        </th>
        <th>
            Address
        </th>
        @*<th>
            Co-ordinates
        </th>*@      
        <th>
            @Html.DisplayNameFor(model => model.NoOfFloors)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeOfAccommodation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalNumberOfRooms)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BuildingDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BuildingPic)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BuildingName)
        </td>
        <td>
            @($"{item.street_number}, {item.route}, {item.locality}, {item.administrative_area_level_1}, {item.country}")
        </td>
        @*<td>
            @($"{item.Latitude}, {item.Longitude}")
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.NoOfFloors)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypeOfAccommodation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalNumberOfRooms)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BuildingDescription)
        </td>
        <td>
            <a><img src="data:image/png;base64,@Convert.ToBase64String(item.BuildingPic, 0, item.BuildingPic.Length)" style="width: 40px; height: 40px" alt="" /></a>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BuildingId }) |
            @Html.ActionLink("Details", "Details", new { id=item.BuildingId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BuildingId })
        </td>
    </tr>
}

</table>
